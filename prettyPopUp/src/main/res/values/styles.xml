<resources>

  <style name="PrettyDialogBoldFont">
    <item name="android:textSize">@dimen/text_size16</item>
    <item name="fontFamily">@font/tajawal_bold</item>
  </style>

  <style name="PrettyDialogRegularFont">
    <item name="android:textSize">@dimen/text_size14</item>
    <item name="fontFamily">@font/tajawal_regular</item>
  </style>

  <style name="PrettyDialogAnimation" parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimaryDark">@color/colorDarkGray</item>
    <item name="colorPrimary">@color/colorGray</item>

    <item name="android:windowActivityTransitions">true</item>
  </style>

  <style name="skipButtonTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="backgroundTint">@color/colorBlack</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="icon">@drawable/ic_arrow</item>
    <item name="iconGravity">textStart</item>
    <item name="strokeColor">@color/colorWhite</item>
    <item name="strokeWidth">1dp</item>
    <item name="cornerRadius">6dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
  </style>

  <style name="nextButtonTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="backgroundTint">@color/colorPrimaryDark</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="cornerRadius">6dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
  </style>
</resources>