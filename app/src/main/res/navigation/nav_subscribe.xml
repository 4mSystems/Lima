<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_subscribe"
    app:startDestination="@id/subscribeFragment">

    <fragment
        android:id="@+id/subscribeFragment"
        android:name="app.te.lima_zola.presentation.auth.subscribe.SubscribeFragment"
        tools:layout="@layout/fragment_subscribe">
        <action
            android:id="@+id/action_subscribeFragment_to_payOnlineFragment"
            app:destination="@id/payOnlineFragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/payOnlineFragment"
        android:name="app.te.lima_zola.presentation.auth.subscribe.PayOnlineFragment"
        tools:layout="@layout/fragment_pay_online" >
        <argument
            android:name="payment_url"
            app:argType="string" />
    </fragment>

</navigation>