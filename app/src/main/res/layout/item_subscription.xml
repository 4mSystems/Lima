<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="eventListener"
            type="app.te.lima_zola.presentation.auth.subscribe.listeners.SubscribeEventListener" />

        <variable
            name="model"
            type="app.te.lima_zola.domain.auth.entity.model.subscriptions.SubscriptionsTypes" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sub_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        >

        <RadioButton
            android:id="@+id/radio_annual"
            style="@style/TextRegularFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:checked="@{model.selected}"
            android:text="@{model.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/annual" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@color/line_color_op"
            app:layout_constraintTop_toBottomOf="@id/radio_annual" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>